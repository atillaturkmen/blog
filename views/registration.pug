extends layout

block content
    br
    h1 Sign up
    br
    a.badge.badge-primary(href='/') < Back to sign in
    br
    br
    if errors
        .alert.alert-warning(role='alert')= errors[0].msg
    form#registration-form(action='', method='post' class="form-registration", onsubmit="check()")
        .form-row
        .form-group.col-md-4
            input#newusername.form-control(type="text", name="newusername", placeholder="user name", required)
            br
            input#newpassword.form-control(type='password', name='newpassword', placeholder='password', title="Password must be at least 6 characters long and contain a letter and a number", pattern="(?=.*[0-9])(?=.*[a-z]).{6,}", required)
            br
        button.btn.btn-primary.float-left(type='submit') Register
    br
    br